@using ECommerceLiteUI.Models
@model ProfileViewModel
@{
    ViewBag.Title = "UpdatePassword";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="row margin-vert-30">
    <div class="row">
        <!-- Login Box -->
        <div class="col-md-6 col-md-offset-3 col-sm-offset-3">
            @Html.ValidationSummary()
            @using (Html.BeginForm("UpdatePassword", "Account", FormMethod.Post,
                new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                <div class="login-header margin-bottom-30">
                    <h2 class="text-center">
                        You can reset your password...
                    </h2>
                </div>
                <br />
                <div class="input-group margin-bottom-20">
                    <span class="input-group-addon">
                        <i class="fa fa-lock"></i>
                    </span>

                    @Html.TextBoxFor(x => x.CurrentPassword, new { @class = "form-control", type = "password", placeholder = "Current Password" })
                    @Html.ValidationMessageFor(x => x.CurrentPassword)
                </div><br />
                <div class="input-group margin-bottom-20">
                    <span class="input-group-addon">
                        <i class="fa fa-lock"></i>
                    </span>
                    @Html.TextBoxFor(x => x.NewPassword, new { @class = "form-control", type = "password", placeholder = "New Password..." })
                    @Html.ValidationMessageFor(x => x.NewPassword)
                </div><br />
                <div class="input-group margin-bottom-20">
                    <span class="input-group-addon">
                        <i class="fa fa-lock"></i>
                    </span>
                    @Html.TextBoxFor(x => x.ConfirmNewPassword, new { @class = "form-control", type = "password", placeholder = "New Passwrd Again..." })
                    @Html.ValidationMessageFor(x => x.ConfirmNewPassword)
                </div><br />
                @Html.HiddenFor(x => x.Name)
                @Html.HiddenFor(x => x.Surname)
                @Html.HiddenFor(x => x.Email)
                @Html.HiddenFor(x => x.Username)

                <div class="row">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-default pull-right" style="background-color:#D10024; color:white;">Change Your Password</button> <br />
                    </div>
                </div>

            }
        </div>
        <!-- End Login Box -->
    </div>
</div>
