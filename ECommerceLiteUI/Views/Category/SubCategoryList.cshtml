@using ECommerceLiteEntity.Models
@model List<Category>
@{
    ViewBag.Title = "SubCategoryList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h4>Sub-Categories of Category @ViewBag.CategoryName</h4>
<hr />
<div class="col-12">
    <div class="card">
        <div class="card-header">
            <a href="/Category/Create/@ViewBag.CategoryId" class="btn btn-info" style=" margin-right:5px;">Create SubCategory</a>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>SubCategory Name</th>
                        <th>SubCategory Description</th>
                        <th>Processes</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryName</td>
                            <td>@item.CategoryDescription</td>
                            <td>
                                <a href="/Category/Edit/@item.Id" class="btn btn-sm btn-warning" style=" margin-right:5px;">Edit</a>
                                <a href="/Category/Delete/@item.Id" class="btn btn-sm btn-danger" style=" margin-right:5px;">Delete</a>

                            </td>
                        </tr>

                    }
                </tbody>
            </table>
            <hr />
            <a href="/Category/CategoryList" class="btn btn-secondary" style=" margin-right:5px;">
                Back to Category
            </a>
        </div>
    </div>
</div>
