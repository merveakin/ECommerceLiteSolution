@using ECommerceLiteUI.Models
@model ProductViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm("Create", "Product", FormMethod.Post, new
{
    @class = "form-horizontal",
    enctype = "multipart/form-data"
}))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal col-6 offset-3">
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.Label("Product Name")
        @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.Label("Product Description")
        @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Product Code")
        @Html.TextBoxFor(model => model.ProductCode, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Category:") <br />
        @Html.DropDownListFor(x => x.CategoryId
            , (List<SelectListItem>)ViewBag.CategoryList,
       new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Price:") <br />
        @Html.TextBoxFor(x => x.Price,
       new { @class = "form-control", type = "number", min = 0 })
    </div>
    <div class="form-group">
        @Html.Label("Stok:") <br />
        @Html.TextBoxFor(x => x.Quantity,
       new { @class = "form-control", type = "number", min = 0 })
    </div>

    <div class="form-group col-md-12">
        @Html.Label("Product Pictures") <br />
        @Html.TextBoxFor(x => x.Files, new { @class = "form-control", type = "file", multiple = true })
    </div>

    <div class="form-group">
        <input type="submit" value="SAVE" class="btn btn-info" style="float:right" />
    </div>
    <div>
        @Html.ActionLink("BACK TO LIST", "ProductList", "Product")
    </div>

    </div>
    }



